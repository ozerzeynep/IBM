    <h1>Dünya Çapında Toplam Atık Sayısı: <span id="wasteCount">0</span></h1>

    <script>
        // Rastgele atık sayısı oluşturucu
        function generateRandomWasteCount() {
            return Math.floor(Math.random() * 1000000); // 0 ile 1.000.000 arasında rastgele bir sayı
        }

        // Sayaç güncelleme işlevi
        function updateWasteCount() {
            const wasteCountElement = document.getElementById('wasteCount');
            const randomWasteCount = generateRandomWasteCount();
            wasteCountElement.textContent = randomWasteCount;
        }

        
        document.addEventListener('DOMContentLoaded', () => {
            updateWasteCount();
            setInterval(updateWasteCount, 5000); // 5 saniyede bir güncelleme
        });
    </script>
</body>
