    <script>
        document.addEventListener("DOMContentLoaded", function() {
    const usernameForm = document.getElementById("usernameForm");
    const newUsernameInput = document.getElementById("newUsername");
    const avartarInfo = document.querySelector(".avartar-info h4");

    usernameForm.addEventListener("submit", function(event) {
        event.preventDefault();

        const newUsername = newUsernameInput.value.trim();

        if (newUsername !== "") {
            avartarInfo.textContent = newUsername;
            newUsernameInput.value = "";
        }
    });
});

    const page = document.getElementById('page');
    const page_text = document.getElementById('page_text');
    const butonn = document.getElementById('butonn');
    const fileSelecter = document.getElementById('fileSelecter');


    



    </script>








    
