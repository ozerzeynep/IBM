    <script>
        const counterElement = document.getElementById('counter');
        let count = 0;
        const targetCount = 104800000; // 104.8 milyon

        function updateCounter() {
            counterElement.textContent = count.toLocaleString();
            count += 1000000; // artış hızı

            if (count <= targetCount) {
                setTimeout(updateCounter, 100); // Her 0.1 saniyede sayaç ilerleyecek
            }
        }

        updateCounter(); // Sayacı başlat.
    </script>

